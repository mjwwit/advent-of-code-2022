{
  "name": "advent-of-code-2022",
  "version": "1.0.0",
  "description": "Advent of Code 2022",
  "scripts": {
    "lint": "eslint src",
    "test": "pnpm lint && jest --coverage",
    "day1-1": "ts-node src/day1/day1-1.ts",
    "day1-2": "ts-node src/day1/day1-2.ts",
    "day2-1": "ts-node src/day2/day2-1.ts",
    "day2-2": "ts-node src/day2/day2-2.ts",
    "day3-1": "ts-node src/day3/day3-1.ts",
    "day3-2": "ts-node src/day3/day3-2.ts",
    "day4-1": "ts-node src/day4/day4-1.ts",
    "day4-2": "ts-node src/day4/day4-2.ts",
    "day5-1": "ts-node src/day5/day5-1.ts",
    "day5-2": "ts-node src/day5/day5-2.ts",
    "day6-1": "ts-node src/day6/day6-1.ts",
    "day6-2": "ts-node src/day6/day6-2.ts",
    "day7-1": "ts-node src/day7/day7-1.ts",
    "day7-2": "ts-node src/day7/day7-2.ts",
    "day8-1": "ts-node src/day8/day8-1.ts",
    "day8-2": "ts-node src/day8/day8-2.ts",
    "day9-1": "ts-node src/day9/day9-1.ts",
    "day9-2": "ts-node src/day9/day9-2.ts"
  },
  "author": "Michael de Wit <mjwwit@gmail.com>",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.19",
    "io-ts-types": "^0.5.19",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/unbound-method": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": false
          },
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ]
        }
      ]
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*",
      "!<rootDir>/node_modules/**",
      "!<rootDir>/src/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
